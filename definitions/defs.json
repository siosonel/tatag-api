{	
	"resourceGroups": {
		"personal": [
			"user",
			"userMemberships",
			"userAccounts",
			"userFeed"
		],
		
		"admin": [
			"brand",
			"brandMembers",
			"brandAccounts",
			"brandHolders",
			"brandFeed"
		],
		
		"intro": [
			"userAbout",
			"userWall",
			"brandAbout",
			"brandWall"
		],
		
		"analysis": [
			"userCollection",
			"brandCollection"
		]
	},

	"tentativeLinks": {
		"user": "/user/{user_id}",
		"userMemberships": "/user/{user_id}/brands",
		"userAccounts": "/user/{user_id}/accounts",
		"userIntro": "/user/{user_id}/intro",
		"userCollection": "/user/collection",
		
		"brand": "/brand/{brand_id}",
		"brandMembers": "/brand/{brand_id}/members",
		"brandAccounts": "/brand/{brand_id}/accounts",
		"brandHolders": "/brand/{brand_id}/holders",		
		"brandIntro": "/brand/{brand_id}/intro",
		"brandCollection": "/brand/collection"		
	},

	"user": {		
		"description": "Personal information for the authorized user.", 
		
		"properties": {
			"user_id": {
				"type": "string"
			},
			
			"name": {
				"type": "string"
			},
			
			"email": {
				"type": "string"
			},
			
			"password": {
				"type": "string"
			}
		},
		
		"actions": [{
			"title": "Edit",
			"@type": "form",
			"@id": "/forms#user-edit",
			"method": "POST",
			
			"inputs": {
				"allowed": ["name","email"],
				"required": []
			},
			
			"examples": [{
				"heading": "Should allow edits to username",
				"inputs": {
					"name": "esi"
				},
				"response_status": 200
			},{
				"heading": "Should not allow edits to start data",
				"inputs": {
					"joined": "esi"
				},
				"response_status": 403
			}]
		},{
			"title": "Deactivate",
			"@type": "form",
			"@id": "/forms#user-deactivate",
			"method": "DELETE"
		}],
		
		"required": ["@type", "@id", "user_id", "name", "email", "userMemberships", "userAccounts"],
		"allowed": ["links", "actions"]
	},

	"userMemberships": {
		"description": "A user's list of memberships in brands, encoded as an array of brand member properties.",

		"properties": {
			"user_id": {
				
			},
			
			"role": {
				"type": "string",
				"selection": ["admin", "regular"]
			},
			
			"hours": {
				"type": "number"
			}
		},
		
		"actions": [{
			"title": "Edit",
			"@type": "form",
			"@id": "/forms#member-edit",
			"method": "POST",
			"filters": {
				"required": ["member_id"],
				"allowed": []				
			},
			"inputs": [{
				"required": ["hours"],
				"allowed": []				
			}]
		}]
	},

	"userAccounts": {
		"description": "One or more budget accounts held by the user.",
		
		"properties": {
			
		},
		
		"actions": [{
			"title": "Edit",
			"@type": "form",
			"@id": "/forms#holder-edit",
			"method": "POST",
			"filters": ["member_id"],
			"inputs": [{
				"alias": {"required": true}
			}]
		}]
	},
	
	"brand": {
		"description": "A budget-issuing organization.",

		"properties": {
			
		},
		
