			"title": "Edit",
			"@type": "form",
			"@id": "/forms#brand-edit",
			"method": "POST",
			"inputs": [{
				"name": {"required": false},
				"url": {"required": false},
				"mission": {"required": false},
				"description": {"required": false}
			}]
		}]
	},
	
	"brandMembers": {
