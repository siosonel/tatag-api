{
    "title": "Add an account holder",
    "@type": "form",
    "@id": "/form/holder-add",
    "method": "POST",
    "inputs": {
        "required": [
            "user_id",
            "account_id",
            "authcode"
        ],
        "optional": []
    },
    "examples": [
        {
            "label": "should allow an admin to add a new accountholder",
            "target": "/member/55/accounts",
            "method": "POST",
            "inputs": {
                "user_id": 24,
                "account_id": 92,
                "authcode": "cftix"
            },
            "status": 200
        },
        {
            "label": "should NOT allow a non-admin to add a new accountholder",
            "target": "/member/54/accounts",
            "method": "POST",
            "inputs": {
                "user_id": 22,
                "account_id": 92,
                "authcode": "cftix"
            },
            "status": 403
        }
    ]
}